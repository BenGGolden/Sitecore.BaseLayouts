<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <standardValues>
      <patch:attribute name="defaultProvider" value="baseLayouts" />
      <providers>
        <add name="baseLayouts" type="Sitecore.BaseLayouts.BaseLayoutStandardValuesProvider, Sitecore.BaseLayouts">
          <param name="innerProvider" type="Sitecore.Data.StandardValuesProvider, Sitecore.Kernel" />
          <param name="layoutValueProvider" type="Sitecore.BaseLayouts.Caching.CachedBaseLayoutValueProvider, Sitecore.BaseLayouts">
            <param name="innerProvider" type="Sitecore.BaseLayouts.BaseLayoutValueProvider, Sitecore.BaseLayouts">
              <param name="layoutValueProvider" type="Sitecore.BaseLayouts.BaseLayoutValidator, Sitecore.BaseLayouts"/>
              <param name="log" type="Sitecore.BaseLayouts.Diagnostics.LogWrapper, Sitecore.BaseLayouts" />
            </param>
            <param name="cache" type="Sitecore.BaseLayouts.Caching.BaseLayoutValueCache, Sitecore.BaseLayouts"/>
          </param>
          <param name="log" type="Sitecore.BaseLayouts.Diagnostics.LogWrapper, Sitecore.BaseLayouts" />
        </add>
      </providers>
    </standardValues>
    <commands>
      <command name="webedit:selectbaselayout" type="Sitecore.BaseLayouts.Commands.SelectBaseLayout,Sitecore.BaseLayouts"/>
    </commands>
    <pipelines>
      <getBaseLayoutItems>
        <processor type="Sitecore.BaseLayouts.Pipelines.GetBaseLayoutItems.GetLookupSourceItems, Sitecore.BaseLayouts" />
      </getBaseLayoutItems>
      <saveBaseLayout>
        <processor type="Sitecore.BaseLayouts.Pipelines.SaveBaseLayout.CheckForCircularReference, Sitecore.BaseLayouts">
          <param name="validator" type="Sitecore.BaseLayouts.BaseLayoutValidator, Sitecore.BaseLayouts" />
        </processor>
        <processor type="Sitecore.BaseLayouts.Pipelines.SaveBaseLayout.SaveNewBaseLayout, Sitecore.BaseLayouts" />
      </saveBaseLayout>
    </pipelines>
  </sitecore>
</configuration>